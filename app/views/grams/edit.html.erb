<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 box">
			<h2>Edit Your Gram</h2>
			<br>
			<%= simple_form_for @gram do |f| %>
				<%= f.input :message %>
				<%= f.input :image, label: "Image (To keep the current image, leave this field blank)" %>
				<br>
				<%= f.submit "Update", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>