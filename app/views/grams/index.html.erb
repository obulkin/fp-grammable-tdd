<div class="container-fluid">
	<% @grams.each do |gram| %>
		<div class="row">
			<%= link_to gram_path(gram) do %>
				<div class="col-xs-10 col-xs-offset-1 box">
					<div class="user-handle"><%= gram.user.email %></div>
					<%= image_tag gram.image, class: "img-responsive" %>
					<br>
					<div class="text-center gram-message"><%= gram.message %></div>
				</div>
			<% end %>
		</div>
		<br>
	<% end %>
</div>